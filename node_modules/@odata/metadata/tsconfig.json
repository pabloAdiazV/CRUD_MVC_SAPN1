{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "lib",
    "allowJs": true,
    "module": "CommonJS",
    "target": "ES2019",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "watch": false,
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}